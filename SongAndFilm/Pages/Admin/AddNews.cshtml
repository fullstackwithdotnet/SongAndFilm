@page
@using SongAndFilm.Core.Models
@model SongAndFilm.Pages.Admin.AddNewsModel
@{
    ViewBag.Title = "Admin";
}


<div class="container mb-5">
    <div class="row">
        <div class="col-md-6 mt-5">
            <div class="card">
                <div class="card-header">
                    Add News
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Type</th>
                                <th>Title</th>
                                <th>Content</th>
                                <th>Image Url</th>
                                <th>IFrame Url</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in @Model.NewsList)
                            {
                                <tr>
                                    <td>@item.NewsType</td>
                                    <td>@item.Title</td>
                                    <td>@item.Content</td>
                                    <td>@item.ImageUrl</td>
                                    <td>@item.IFrameEmbed</td>
                                    <td>
                                        <a asp-page-handler="EditNews" asp-route-id="@item.RowKey">Edit</a>  |
                                        <a asp-page-handler="DeleteNews" asp-route-id="@item.RowKey">Delete</a>
                                    </td>
                                </tr>
                            }

                        </tbody>

                    </table>
                </div>
            </div>
        </div>
        <div class="col-6 mt-5">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <h5>Add News</h5>  <a asp-page-handler="AddNewNews" class="btn btn-sm btn-secondary ml-5">+ Add New</a>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="@Model.News.PartitionKey" />
                        <input type="hidden" asp-for="@Model.News.RowKey" />
                        <div class="form-group">
                            <label asp-for="@Model.News.NewsType"></label>
                            <select class="form-control" asp-for="@Model.News.NewsType">
                                <option value="News">News</option>
                                <option value="Placement">Placement</option>
                            </select>
                            
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.News.Title"></label>
                            <input class="form-control" asp-for="@Model.News.Title">
                            <span asp-validation-for="@Model.News.Title"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.News.Content"></label>
                            <Textarea class="form-control" asp-for="@Model.News.Content"></Textarea>
                            <span asp-validation-for="@Model.News.Content"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.News.ImageUrl"></label>
                            <input class="form-control" asp-for="@Model.News.ImageUrl">
                            <span asp-validation-for="@Model.News.ImageUrl"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.News.IFrameEmbed"></label>
                            <input class="form-control" asp-for="@Model.News.IFrameEmbed">
                            <span asp-validation-for="@Model.News.IFrameEmbed"></span>
                        </div>
                        <button type="submit" class="btn btn-primary mt-1">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>