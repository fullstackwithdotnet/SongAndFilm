@page
@model SongAndFilm.Pages.ContactModel
@{
    ViewData["Title"] = "Contact";
}
<section class="logo d-flex justify-content-center border-top position-relative bg-body">
    <article class="img-container d-lg-none p-4">
        <a href="index.html">
            <img src="assets/img/logo.png" alt="Logo" class="img-fluid" />
        </a>
    </article>
</section>
<section class="banner-container-contact text-center position-relative mb-4">
    <div class="banner-content-contact w-100 h-100 d-flex flex-column justify-content-center align-items-center">
        <article class="text-animation position-relative"
                 style="margin-top: -120px">
            <aside class="content position-absolute">
                <div class="content__container">
                    <ul class="content__container__list p-0 text-center">
                        <li class="content__container__list__item m-0">HOLA</li>
                        <li class="content__container__list__item m-0">SALUT</li>
                        <li class="content__container__list__item m-0">HELLO</li>
                        <li class="content__container__list__item m-0">HOLA</li>
                    </ul>
                </div>
            </aside>
        </article>
        <article class="container-input container mt-5">
            <div class="row">
                <div class="col-12 col-md-6 my-3">
                    <a href="#submit"
                       class="btn btn-success border-0 text-uppercase w-100">
                        Send Us a message
                    </a>
                </div>
                <div class="col-12 col-md-6 my-3">
                    <a href="#stay" class="btn btn-warning text-uppercase w-100">
                        Subscribe to us
                    </a>
                </div>
            </div>
        </article>
    </div>
</section>
<section class="ourhq-container py-5 text-center">
    <h1 class="tittle contact fw-bold">OUR HQ</h1>
    <hr class="my-5 w-25 mx-auto" />
    <p class="card-text fs-3 mx-2">Song and Film</p>
    <p class="card-text fs-3 mx-2">Frederick,</p>
    <p class="card-text fs-3 mx-2">Maryland</p>
    <a href="mailto:glorytvfilm@gmail.com" class="btn btn-dark my-4 w-50"><i class="fas fa-envelope-square mx-2"></i> glorytvfilm@gmail.com</a>
    <p class="card-text fs-3 my-4">Send us a link to your music!</p>
    <p class="rrss-contact card-text my-4 fs-3">
        <a class="mx-2 border p-4"
           href="https://www.facebook.com/songandfilm">
            <i class="fab fa-facebook-f fs-4"></i>
        </a>
        <a class="mx-2 border p-4" href="https://twitter.com/songandfilm">
            <i class="fab fa-twitter fs-4"></i>
        </a>
        <a class="mx-2 border p-4" href="https://soundcloud.com/songandfilm">
            <i class="fab fa-soundcloud fs-4"></i>
        </a>
    </p>
</section>
<section class="stayintouch-container text-center" id="stay">
    <div class="stayintouch-content px-4 w-100 h-100 d-flex flex-column justify-content-center">
        <h2 class="text-uppercase fw-bold tittle-stay">Stay in Music</h2>
        <p class="card-text fs-4">
            Discover new music and stay up to date on the latest news!
        </p>
        <div class="mt-3 container">
            <div class="row">
                <div class="col-12 col-lg-6 mt-4">
                    <input type="email"
                           class="form-control"
                           placeholder="Your Email here" />
                </div>
                <div class="col-12 col-lg-6 mt-4">
                    <a href="#" class="btn btn-warning text-uppercase w-100">
                        SUBSCRIBE
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="submit-container p-5 text-center" id="submit">
    <h1 class="tittle contact fw-bold">HOW TO SUBMIT MUSIC</h1>
    <hr class="my-5 w-25 mx-auto" />
    <p class="card-text fs-3 mx-2">Send an email to</p>
    <p class="card-text fs-3 mx-2">
        <span class="fw-bold">songfilm.submissions@gmail.com</span> with a
        link to your music.
    </p>
    <p class="card-text fs-4 mx-2 fst-italic">
        Due to time constraints, Song & Film will not respond to <br />
        submissions unless interested in signing your music to the catalog.
    </p>
    <p class="card-text fs-4 mx-2 fst-italic fw-bold">
        Submissions are only accepted in April, August and December. <br />
        Send your three strongest songs
    </p>
    <h1 class="tittle contact mt-5 fw-bold">HOW TO SUBMIT MUSIC</h1>
    <hr class="my-5 w-25 mx-auto" />
    <article class="mb-3 container">
        <div class="row">
            <div class="col-12 col-lg-6 mt-4">
                <input type="text"
                       class="form-control w-100"
                       placeholder="Name *" />
            </div>
            <div class="col-12 col-lg-6 mt-4">
                <input type="text"
                       class="form-control w-100"
                       placeholder="Email *" />
            </div>
            <div class="col-12">
                <input type="text"
                       class="form-control w-100 mt-4"
                       placeholder="Subject *" />
                <textarea class="form-control w-100 mt-4"
                          placeholder="Message *"></textarea>
                <a href="#"
                   class="btn btn-success border-0 text-uppercase mt-4 w-100">
                    SUBMIT
                </a>
            </div>
        </div>
    </article>
</section>
<section class="map-container container w-100">
    <iframe class="map-iframe w-100 h-50"
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d607869.1065113161!2d-117.10959164348006!3d32.68513823750702!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x80d94e4565c3aacf%3A0x46ccb8734b8f2bd3!2sChula%20Vista%2C%20California%2C%20EE.%20UU.!5e0!3m2!1ses-419!2sar!4v1615749850844!5m2!1ses-419!2sar"
            style="border: 0"
            allowfullscreen=""
            loading="lazy"></iframe>
</section>