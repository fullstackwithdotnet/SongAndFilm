@using System.Security.Principal
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Song & Film</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl"
          crossorigin="anonymous" />
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    @*<link rel="stylesheet" href="~/css/site.css" />*@
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/headerstyle.css" rel="stylesheet" />
</head>
<body>

    <header class="container-header fixed-top">
        <nav>
            <article class="nav-xbootstrap">
                @if (!User.Identity.IsAuthenticated)
                {
                    <ul>
                        <li class="home"><a href="/">Home</a></li>
                        <li><a href="/about">About</a></li>
                        <li>
                            <a href="/placements">Placements</a>
                        </li>
                        <li>
                            <a href="/" class="logo">
                                <img alt="Logo"
                                     style="width: 10vw"
                                     class="mx-auto image-logo d-nonee"
                                     src="~/assets/img/logo.png" />
                            </a>
                        </li>

                        <li><a href="/news" class="especial-item">News</a></li>
                        <li><a href="/otherservices">Other Services</a></li>
                        <li><a href="/contact">Contact</a></li>
                        <partial name="_LoginPartial" />
                    </ul>
                }
                else
                {
                    <ul>
                        <li><a href="/admin/addnews">Add News</a></li>
                        <li><a href="/admin/addplacement">Add Placements</a></li>

                        <li>
                            <a href="/" class="logo">
                                <img alt="Logo"
                                     style="width: 10vw"
                                     class="mx-auto image-logo d-nonee"
                                     src="~/assets/img/logo.png" />
                            </a>
                        </li>


                        <partial name="_LoginPartial" />
                    </ul>
                }

            </article>
            <article class="nav-bg-xbootstrap d-flex justify-content-center align-items-center">
                <div class="navbar-xbootstrap">
                    <div class="button-content position-relative">
                        <span class="position-absolute span1"></span>
                        <span class="position-absolute span2"></span>
                        <span class="position-absolute span3"></span>
                    </div>
                </div>

                <div class="header-rrss d-lg-none">
                    <a href="https://www.facebook.com/songandfilm" class="mx-3">
                        <i class="fab fa-facebook-f fs-4"></i>
                    </a>
                    <a href="https://twitter.com/songandfilm" class="mx-3">
                        <i class="fab fa-twitter fs-4"></i>
                    </a>
                    <a href="https://soundcloud.com/songandfilm" class="mx-3">
                        <i class="fab fa-soundcloud fs-4"></i>
                    </a>
                </div>
            </article>
        </nav>
    </header>

    <main>
        <section class="button-top position-fixed end-0 bottom-50">
            <a href="#" class="btn btn-secondary p-3">
                <i class="fas fa-chevron-up"></i>
            </a>
        </section>
        @RenderBody()
    </main>

    <footer class="pb-4 px-3 m-0 footer">
        <article class="footer-content w-100 h-100 row p-0 m-0">
            <div class="mt-4 d-flex justify-content-between">
                <div class="d-flex w-100">
                    <div class="col-1 d-flex justify-content-center align-items-center mx-2">
                        <a href="https://www.facebook.com/songandfilm">
                            <i class="fab fa-facebook-f fs-4"></i>
                        </a>
                    </div>
                    <div class="col-1 d-flex justify-content-center align-items-center mx-2">
                        <a href="https://twitter.com/songandfilm">
                            <i class="fab fa-twitter fs-4"></i>
                        </a>
                    </div>
                    <div class="col-1 d-flex justify-content-center align-items-center mx-2">
                        <a href="https://soundcloud.com/songandfilm">
                            <i class="fab fa-soundcloud fs-4"></i>
                        </a>
                    </div>
                </div>
                <div class="col-12 col-lg-2 mt-2">
                    <p class="footer-description m-0 fs-6">&copy; 2016 Song and Film</p>
                </div>
            </div>
        </article>
    </footer>

    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>*@

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
            crossorigin="anonymous"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/83ef059c2f.js" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~js/main.js"></script>
    <script>
        var current = location.pathname;
        $('.nav-xbootstrap li a').each(function () {
            var $this = $(this);
            // if the current path is like this link, make it active
           

            if (current === '/') {
                $('.home').addClass('active');
            }
            else if ($this.attr('href').indexOf(current) !== -1) {
                $this.parent().addClass('active');
            }

        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
